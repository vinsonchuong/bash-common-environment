#!/usr/bin/env bash
set -o errexit
set -o nounset
# set -o xtrace
set -o pipefail

eval "$(parse-options help:h -- "$@")"

if [[ $help ]]
then
	cat '/usr/share/bash-common-environment/help/environment'
	exit
fi

cat <<'EOF'
BIN=$(basename "${BASH_SOURCE[0]}")
if [[ $(dirname "$BIN") = '/usr/bin' ]]
then
	PACKAGE=$(pacman -Qoq "./$BIN")
	LIB="/usr/lib/${PACKAGE}"
	HELP="/usr/share/${PACKAGE}/help/${BIN}"
else
	ROOT=".."
	LIB="${ROOT}/lib"
	HELP="${ROOT}/help/${BIN}"
fi
EOF
